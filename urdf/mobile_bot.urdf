<?xml version="1.0"?>
<robot name="messi_bot">

    <!-- Base Link -->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.3 0.3 0.05"/> <!-- Halved size -->
            </geometry>
            <material name="red">
                <color rgba="1 0.0 0.0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>  <!-- Gripper control plugin specifics here, if needed -->
                <box size="0.3 0.3 0.05"/> <!-- Halved size -->
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.015" ixy="0" ixz="0" iyy="0.0375" iyz="0.0" izz="0.0375"/><!-- Adjusted Inertia -->
        </inertial>
    </link>

    <!-- Front Caster Wheel -->
    <link name="front_caster_of_wheel">  <!-- Gripper control plugin specifics here, if needed -->
        <visual>
            <geometry>
                <box size="0.01 0.01 0.01"/> <!-- Halved size -->
            </geometry>
            <material name="green">
                <color rgba="0.0 1.0 0.0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.01 0.01 0.01"/> <!-- Halved size -->
            </geometry>
        </collision>
        <inertial>
            <mass value="0.05"/>
             <inertia ixx="0.00083" ixy="0" ixz="0" iyy="0.00083" iyz="0.0" izz="0.000167"/> <!-- Adjusted Inertia -->
        </inertial>
    </link>

    <joint name="front_caster_of_wheel_joint" type="continuous">
        <axis xyz="0.0 0.0 1"/>
        <parent link="base_link"/>
        <child link="front_caster_of_wheel"/>
        <origin xyz="0.10 0.0 0.0" rpy="0.0 0.0 0.0"/> <!-- Adjusted Position -->
    </joint>

    <!-- Front Wheel -->
    <link name="front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0175" length="0.025"/> <!-- Halved size -->
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0175" length="0.025"/> <!-- Halved size -->
            </geometry>
        </collision>
        <inertial>
            <mass value="0.05"/>
           <inertia ixx="5.1458e-5" ixy="0" ixz="0" iyy="5.1458e-5" iyz="0.0" izz="6.125e-5"/> <!-- Adjusted Inertia -->
        </inertial>
    </link>

    <joint name="front_wheel_joint" type="continuous">
<axis xyz="0.0 0.0 1"/>
<parent link="front_caster_of_wheel"/>
<child link="front_wheel"/>
<origin xyz="0.025 0.0 -0.025" rpy="-1.5708 0.0 0.0"/> <!-- Adjusted Position -->
</joint>

<!-- Right Wheel -->
<link name="right_wheel">
    <visual>
        <geometry>
            <cylinder radius="0.0175" length="0.025"/> <!-- Halved size -->
        </geometry>
        <material name="black"/>
    </visual>
    <collision>
        <geometry>
            <cylinder radius="0.0175" length="0.025"/> <!-- Halved size -->
        </geometry>
    </collision>
    <inertial>
        <mass value="0.05"/>
        <inertia ixx="2.5729e-5" ixy="0" ixz="0" iyy="2.5729e-5" iyz="0.0" izz="3.0625e-5"/> <!-- Adjusted Inertia -->
    </inertial>
</link>

<joint name="right_wheel_joint" type="continuous">
    <axis xyz="0.0 0.0 1"/>
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="-0.14125 -0.0625 -0.025" rpy="-1.5708 0.0 0.0"/> <!-- Adjusted Position -->
</joint>

<!-- Left Wheel -->
<link name="left_wheel">
    <visual>
        <geometry>
            <cylinder radius="0.0175" length="0.025"/> <!-- Halved size -->
        </geometry>
        <material name="black"/>
    </visual>
    <collision>
        <geometry>
            <cylinder radius="0.0175" length="0.025"/> <!-- Halved size -->
        </geometry>
    </collision>
    <inertial>
        <mass value="0.05"/>
        <inertia ixx="2.5729e-5" ixy="0" ixz="0" iyy="2.5729e-5" iyz="0.0" izz="3.0625e-5"/> <!-- Adjusted Inertia -->
    </inertial>
</link>

<joint name="left_wheel_joint" type="continuous">
    <axis xyz="0.0 0.0 1"/>
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="-0.14125 0.0625 -0.025" rpy="-1.5708 0.0 0.0"/> <!-- Adjusted Position -->
</joint>

<!-- Gripper Link -->
 <link name="left_finger">
        <visual>
            <geometry>
                <box size="0.2 0.0025 0.02"/> <!-- Dimensions of the finger -->
            </geometry>
            <material name="grey"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.2 0.0025 0.02"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.01"/>
            
           <inertia ixx="1e-6" ixy="0" ixz="0.0" iyy="1e-6" iyz="0.0" izz="1e-6"/>
        </inertial>
    </link>

    <!-- Right Finger of Gripper -->
    <link name="right_finger">
        <visual>
            <geometry>
                <box size="0.2 0.0025 0.02"/> <!-- Dimensions of the finger -->
            </geometry>
            <material name="grey"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.2 0.0025 0.02"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.01"/>
             
          <inertia ixx="1e-6" ixy="0" ixz="0.0" iyy="1e-6" iyz="0.0" izz="1e-6"/>
        </inertial>
    </link>

    <!-- Joint for Left Finger -->
   <joint name="right_finger_joint" type="prismatic">
    <parent link="base_link"/>
    <child link="right_finger"/>
    <origin xyz="0.22 -0.13 0.01" rpy="0.0 0.0 0.0"/>
    <axis xyz="0 1 0"/> <!-- Axis along which the joint extends -->
    <limit lower="0.0" upper="0.05" effort="10" velocity="0.05"/>
</joint>


    <!-- Joint for Right Finger -->
  <joint name="left_finger_joint" type="prismatic">
    <parent link="base_link"/>
    <child link="left_finger"/>
    <origin xyz="0.22 0.13 0.01" rpy="0.0 0.0 0.0"/>
    <axis xyz="0 -1 0"/> <!-- Axis along which the joint extends -->
    <limit lower="0.0" upper="0.05" effort="10" velocity="0.05"/>
</joint>





<!-- Laser Scanner remains unchanged -->
 <link name="laser_scanner">
        <visual>
            <geometry>
                <box size="0.05 0.05 0.05"/>
            </geometry>
        </visual>

        <collision>
            <geometry>
                <box size="0.05 0.05 0.05"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="1e-5"/>
            <inertia ixx="1e-6" ixy="0" ixz="0.0" iyy="1e-6" iyz="0.0" izz="1e-6"/>
        </inertial>
    </link>

    <joint name="laser_scanner_joint" type="fixed">
        <axis xyz="0.0 1 0.0"/>
        <parent link="base_link"/>
        <child link="laser_scanner"/>
        <origin xyz="0.0 0.0 0.08" rpy="0.0 0.0 0.0"/>
    </joint>

     <gazebo reference="laser_scanner">
        <sensor type="ray" name="laser">
            <pose>0 0 0 0 0 0</pose>
            <visualize>true</visualize>
            <update_rate>40</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-3.14</min_angle>
                        <max_angle>3.14</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.1</min>
                    <max>10</max>
                    <resolution>0.1</resolution>
                </range>
            </ray>
            <plugin name="Lidar" filename="libgazebo_ros_laser.so">
                <topicName>/scan</topicName>
                <frameName>laser_scanner</frameName>
            </plugin>
        </sensor>
    </gazebo>

<!-- Gazebo plugins and materials -->
<gazebo reference="base_link">
    <material>Gazebo/Orange</material>
</gazebo>
<gazebo reference="front_caster_of_wheel">
    <material>Gazebo/Red</material>
</gazebo>
<gazebo reference="front_wheel">
    <material>Gazebo/Black</material>
</gazebo>
<gazebo reference="right_wheel">
    <material>Gazebo/Black</material>
</gazebo>
<gazebo reference="left_wheel">
    <material>Gazebo/Black</material>
</gazebo>
<gazebo reference="gripper">
    <material>Gazebo/Grey</material>
</gazebo>

<!-- Plugins for wheels, laser scanner, and other functionalities -->
<gazebo>
    <plugin name="explorer_bot_controller" filename="libgazebo_ros_diff_drive.so">
        <leftJoint>left_wheel_joint</leftJoint>
        <rightJoint>right_wheel_joint</rightJoint>
        <legacyMode>false</legacyMode>
        <robotBaseFrame>base_link</robotBaseFrame>
        <wheelSeparation>0.125</wheelSeparation> <!-- Adjusted for reduced size -->
        <wheelDiameter>0.035</wheelDiameter> <!-- Adjusted for reduced size -->
        <publishWheelJointState>true</publishWheelJointState>
    </plugin>
</gazebo>
<gazebo>
    <plugin name="joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
        <jointName>front_caster_of_wheel_joint, front_wheel_joint</jointName>
    </plugin>
</gazebo>
<gazebo>
    <plugin name="gripper_controller" filename="libgazebo_ros_control.so">
        <robotNamespace>/</robotNamespace>
        <controlPeriod>0.001</controlPeriod>
        <robotSimType>gazebo_ros_control/DefaultRobotHWSim</robotSimType>
        <joint name="left_finger_joint">
            <hardwareInterface>EffortJointInterface</hardwareInterface>
        </joint>
        <joint name="right_finger_joint">
            <hardwareInterface>EffortJointInterface</hardwareInterface>
        </joint>
    </plugin>
</gazebo>


</robot>